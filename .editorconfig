root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,yaml,yml,css,scss,twig,html}]
indent_size = 2
tab_width = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
tab_width = 4
